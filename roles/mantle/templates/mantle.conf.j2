[program:mantle]
command=/home/mantle/.nvm/{{ nodejs_version }}/bin/node {{ mantle_checkout_destination }}/bundle/main.js
environment=METEOR_DB_NAME="{{ meteor_db_name }}",MONGO_URL="{{ meteor_mongo }}",PORT="{{ meteor_port }}"
directory={{ mantle_checkout_destination }}
user=mantle
numprocs=1
autostart=true
autorestart=unexpected
startsecs=10
logfile_maxbytes=150MB
logfile_backups=10
loglevel=info
